{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "paths": {
      "*": ["node_modules/*"],
      "@api/*": ["api/*"],
      "@utils": ["utils/index.ts"],
      "@models/*": ["models/*"],
      "@screens/*": ["screens/*"],
      "@actions/*": ["actions/*"],
      "@reducers/*": ["reducers/*"],
      "@selectors/*": ["selectors/*"],
      "@constants": ["constants/index.ts"],
      "@navigation": ["navigation/index.ts"],
      "@components": ["components/index.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
